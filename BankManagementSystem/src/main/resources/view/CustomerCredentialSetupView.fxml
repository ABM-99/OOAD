<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="bankmanagementsystem.controller.CustomerCredentialSetupController"
            prefWidth="500" prefHeight="650">
    
    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30">
        <Label text="Setup Login Credentials" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <!-- Customer ID Verification -->
        <Label text="Step 1: Verify Customer ID" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="customerIdField" promptText="Enter your Customer ID" prefWidth="250" onKeyReleased="#handleVerifyCustomerId"/>
            <Button text="Verify" onAction="#handleVerifyCustomerId" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
        
        <Label fx:id="customerInfoLabel" text="Enter your Customer ID to begin setup" 
               style="-fx-font-weight: bold;" wrapText="true" prefWidth="410"/>
        
        <!-- Login Credentials -->
        <Label text="Step 2: Create Login Credentials" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        
        <TextField fx:id="usernameField" promptText="Choose a username" prefWidth="410"/>
        <PasswordField fx:id="passwordField" promptText="Create a password" prefWidth="410"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" prefWidth="410"/>
        <TextField fx:id="emailField" promptText="Email address" prefWidth="410"/>
        
        <!-- Messages -->
        <Label fx:id="errorLabel" textFill="red" style="-fx-font-weight: bold;" wrapText="true" prefWidth="410"/>
        <Label fx:id="successLabel" textFill="green" style="-fx-font-weight: bold;" wrapText="true" prefWidth="410"/>
        
        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="setupButton" text="Setup Credentials" onAction="#handleSetupCredentials" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 140; -fx-pref-height: 35;"/>
            <Button fx:id="backToLoginButton" text="Back to Login" onAction="#handleBackToLogin"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 140; -fx-pref-height: 35;"/>
        </HBox>
        
        <!-- Instructions -->
        <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
            <Label text="Setup Instructions:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label text="• You need your Customer ID from when your account was created" style="-fx-text-fill: #7f8c8d;"/>
            <Label text="• Choose a unique username and email" style="-fx-text-fill: #7f8c8d;"/>
            <Label text="• Password must be at least 6 characters" style="-fx-text-fill: #7f8c8d;"/>
            <Label text="• After setup, you can login with your username/password" style="-fx-text-fill: #7f8c8d;"/>
        </VBox>
    </VBox>
</AnchorPane>
